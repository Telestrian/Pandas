<Window x:Class="ColourSwatcher.ColourSlider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColourSwatcher"
        mc:Ignorable="d"
        Title="Pick a colour..." Height="233.162" Width="207" Background="#FF191919" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" ResizeMode="NoResize" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Slider x:Name="sldB" HorizontalAlignment="Center" Margin="12,135,12,0" VerticalAlignment="Top" Height="24" Width="169" Maximum="255" ValueChanged="sldB_ValueChanged" RenderTransformOrigin="0.504,0.873" Grid.ColumnSpan="2" BorderThickness="2" Background="#00830202" HorizontalContentAlignment="Center" Padding="0" VerticalContentAlignment="Center" BorderBrush="#00000000"/>
        <Slider x:Name="sldG" HorizontalAlignment="Center" Margin="12,106,12,0" VerticalAlignment="Top" Height="24" Width="169" Grid.ColumnSpan="2" Maximum="255" ValueChanged="sldG_ValueChanged" Background="#001152C3" BorderThickness="2" BorderBrush="#00000000"/>
        <Slider x:Name="sldR" HorizontalAlignment="Center" Margin="12,77,12,0" VerticalAlignment="Top" Height="24" Width="169" Grid.ColumnSpan="2" Maximum="255" ValueChanged="sldR_ValueChanged" Background="#00000000" BorderThickness="2" BorderBrush="#00000000" Foreground="White"/>
        <Rectangle x:Name="result" Grid.ColumnSpan="2" Fill="Black" HorizontalAlignment="Center" Height="59" Margin="12,10,12,0" Stroke="Black" VerticalAlignment="Top" Width="169" IsHitTestVisible="False"/>
        <Button x:Name="Finish" Content="Finish" HorizontalAlignment="Center" VerticalAlignment="Top" Width="87" Grid.ColumnSpan="2" Margin="58,164,58,0" Click="Finish_Click" />

    </Grid>
</Window>
